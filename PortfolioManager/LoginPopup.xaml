<Window
    x:Class="PortfolioManager.LoginPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PortfolioManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Login"
    Width="220"
    Height="240"
    mc:Ignorable="d">

    <StackPanel x:Name="LoginPopupStack">
        <Label Width="186" Content="Host" />
        <TextBox x:Name="HostTextBox" Width="186" />
        <Label Width="186" Content="Username" />
        <TextBox x:Name="UsernameTextBox" Width="186" />
        <Label Width="186" Content="Password" />
        <PasswordBox
            x:Name="PasswordBox"
            Width="186"
            Height="16"
            KeyDown="PasswordBox_KeyDown" />
        <RadioButton
            x:Name="SavePasswordCheckBox"
            Width="184"
            Margin="0,5,0,0"
            Click="SavePasswordCheckBox_Click"
            Content="Save password" />
        <Button
            x:Name="LoginButton"
            Width="60"
            Margin="0,10,0,0"
            Click="LoginButton_Click"
            Content="Login" />
    </StackPanel>
</Window>
